{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": ".",
    "declaration": true,
    "noEmit": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2016",
    "jsx": "react-jsx",
    "types": ["node", "jest"],
    "paths": {
      "@/*": ["./*"],
      "hasyx": ["./lib/index.ts"],
      "hasyx/*": ["./*"]
    },
  },
  "include": ["lib/**/*.ts", "lib/**/*.tsx", "components/**/*.ts", "components/**/*.tsx", "hooks/**/*.ts", "hooks/**/*.tsx"],
  "exclude": ["node_modules", "**/*.test.ts", "**/*.test.tsx", ".mastra"]
} 